<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3sp"
    android:background="#F1F1F1"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/titulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".95"
            android:text="DETALLES DE PEDIDO"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#1470BD"
            android:layout_gravity="start"
            app:backgroundTint="#BE7000"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnCloseVer"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:textColor="@android:color/black"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/circle_background"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/titulo2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProductosPedido"
            android:layout_height="@dimen/tamano_tabla"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true">
        </androidx.recyclerview.widget.RecyclerView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/recyclerProductosPedido">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical"
                android:layout_marginRight="8sp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TURNO/HORA"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="#5094BE"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/turnoMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingEnd="0sp"
                    android:text="-"
                    android:paddingRight="0sp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROGRAMADO"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="#5094BE"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingEnd="0sp"
                    android:text="-"
                    android:paddingRight="0sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENTREGADO"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="#5094BE"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fechaatencionMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingEnd="0sp"
                    android:text="-"
                    android:paddingRight="0sp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIPO PAGO"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="#5094BE"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tipopagoMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingEnd="0sp"
                    android:text="-"
                    android:paddingRight="0sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical"
                android:layout_marginRight="8sp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REPARTIDOR"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="#50BE8E"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/repartidorMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingEnd="0sp"
                    android:text="-"
                    android:paddingRight="0sp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMENTARIO"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="#50BE8E"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/comentarioMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:paddingEnd="0sp"
                    android:text="-"
                    android:paddingRight="0sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESTADO"
                    android:gravity="left"
                    android:textSize="13sp"
                    android:textColor="#BE9350"
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/estadoMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#569900"
                    android:textStyle="bold"
                    android:layout_marginBottom="10sp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL"
                    android:gravity="left"
                    android:textSize="13sp"
                    android:textColor="#BE9350"
                    android:textStyle="bold"
                    android:layout_marginBottom="10sp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/totalMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor="#003791"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</RelativeLayout>