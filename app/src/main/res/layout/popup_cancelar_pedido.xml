<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3sp"
    android:background="#F1F1F1"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/titulo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".95"
            android:text="CANCELAR PEDIDO"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="start"
            app:backgroundTint="#BE7000"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCloseCancelar"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:textColor="@android:color/black"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/circle_background"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/titulo1"
        android:layout_marginTop="10sp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¿REALMENTE DESEAS CANCELAR ESTE PEDIDO?"
            android:id="@+id/nombreProductoAgregarCarrito"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#BE7000"
            android:layout_marginTop="10sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:gravity="center"
            android:layout_below="@+id/cuadro1" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelarPedido"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:drawableLeft="@drawable/ic_tacho"
            android:textColor="@android:color/white"
            android:background="@drawable/estilo_boton"
            android:layout_gravity="center"
            android:text="ACEPTAR"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nombreProductoAgregarCarrito"/>
    </RelativeLayout>
</RelativeLayout>