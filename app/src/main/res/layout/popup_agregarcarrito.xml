<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="#F1F1F1"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/titulo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".95"
            android:text="AÃ‘ADIR PRODUCTO"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="start"
            android:backgroundTint="#BE7000"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@android:color/black"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/circle_background"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/titulo1"
        android:layout_marginTop="10dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cuadro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@layout/border"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".5">
                <!--android:layout_marginTop="5dp"-->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="0dp"
                        android:gravity="right"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_dark"
                        android:text="STOCK"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/stock2ProductoAgregarCarrito"
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="0dp"
                        android:src="@drawable/panadero"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:textColor="@android:color/black"
                        android:text="-"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_orange_light"
                        android:text="PRECIO/U"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/precio2ProductoAgregarCarrito"
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="match_parent"
                        android:src="@drawable/panadero"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:textColor="@android:color/black"
                        android:text="-"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imagenProductoAgregarCarrito"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/panadero"
                    android:layout_gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".5">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_green_dark"
                    android:text="SUBTOTAL"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subtotalProductoAgregarCarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/panadero"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="-"
                    android:layout_marginBottom="15dp"
                    android:textColor="@android:color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="QUIERO"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnBajar"
                        android:layout_width="0dp"
                        android:layout_weight=".25"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="-"
                        android:textSize="20dp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_red_light"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/quieroProductoAgregarCarrito"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:maxLength="4"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:text="1"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSubir"
                        android:layout_width="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight=".25"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textColor="@android:color/white"
                        android:textSize="20dp"
                        android:backgroundTint="@android:color/holo_green_light"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/nombreProductoAgregarCarrito"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#BE7000"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:layout_below="@+id/cuadro1" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descripcionProductoAgregarCarrito"
            android:textColor="#7F7760"
            android:text="-"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/nombreProductoAgregarCarrito"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAgregarCarrito"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:textColor="@android:color/white"
            android:background="@drawable/estilo_boton"
            android:layout_gravity="center"
            android:text="AGREGAR A CARRITO"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/descripcionProductoAgregarCarrito"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/stockProductoAgregarCarrito"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/precioProductoAgregarCarrito"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"/>
</RelativeLayout>