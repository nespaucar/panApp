<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".actividad.BienvenidoFragment">

    <RelativeLayout
        android:id="@+id/bienvenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imagenesbienvenido"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation2"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="2508-pumped-up.json"
                app:lottie_loop="true" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation3"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                app:lottie_fileName="4762-food-carousel.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                android:layout_marginEnd="22dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bienvenidobotones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/imagenesbienvenido">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quedeseashacer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="¿QUÉ DESEAS HACER?"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="#FF2A00"
                android:layout_alignParentTop="true"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCatalogo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="13dp"
                android:drawableLeft="@drawable/ic_catalogo"
                android:text="CATÁLOGO DE PRODUCTOS"
                android:textColor="#ffff"
                android:backgroundTint="#0078A4"
                android:layout_marginBottom="@dimen/separacion2"
                android:layout_marginTop="@dimen/separacion"
                android:layout_below="@+id/quedeseashacer"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMisPedidos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="13dp"
                android:drawableLeft="@drawable/ic_pedidos"
                android:text="MIS PEDIDOS"
                android:textColor="#ffff"
                android:backgroundTint="#48A400"
                android:layout_marginBottom="@dimen/separacion2"
                android:layout_below="@+id/btnCatalogo"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRuta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="13dp"
                android:text="RUTA DE PEDIDOS"
                android:drawableLeft="@drawable/ic_maps"
                android:textColor="#ffff"
                android:backgroundTint="#F0A911"
                android:layout_marginBottom="@dimen/separacion2"
                android:layout_below="@+id/btnMisPedidos"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSalir"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="13dp"
                android:text="CERRAR SESIÓN"
                android:drawableLeft="@drawable/ic_cerrar"
                android:textColor="#ffff"
                android:backgroundTint="#FB574A"
                android:layout_below="@+id/btnRuta"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>